{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "glosc-copilot",
  "version": "0.1.1",
  "identifier": "aoe.top.glosc-copilot",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "glosc-copilot",
        "width": 1280,
        "height": 720,
        "decorations": false,
        "dragDropEnabled": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/node",
      "binaries/uv"
    ],
    "resources": [
      "resources/npm"
    ]
  }
}